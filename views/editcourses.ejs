<!DOCTYPE html>
<html>
<% include head.ejs %>
<body class="skin-blue">
    <% include header.ejs %>
    <div class="wrapper row-offcanvas row-offcanvas-left">
        <% var log = logged %>
        <% include leftside.ejs %>

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">                
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    <%= title %>
                    <small><%= heading %></small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
                    <li class="active"><%= title %></li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" ng-app="editCourseApp" ng-controller="mainController">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="box box-primary">
                            <div class="box-header" data-toggle="tooltip" title="">
                                <h3 class="box-title"><%= __('Select A Course') %></h3>

                            </div>
                            <div class="box-body">
                                <dir-pagination-controls on-page-change="pageChanged(newPageNumber)"></dir-pagination-controls>
                                
                                <ul class="list-unstyled" >
                                    <li dir-paginate="user in users | itemsPerPage: usersPerPage" total-items="totalUsers" >
                                        <a href="#" ng-click="getCourse(user._id)">{{ user.courseName }}</a>
                                    </li>
                                    
                                </ul>    
                            </div><!-- /.box-body -->

                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" ng-if="showClass">
                        
                        <div class="box box-primary">
                            <div class="box-header">
                                <h3 class="box-title"><%= __('Edit Course') %></h3>
                            </div><!-- /.box-header -->
                            <!-- form start -->
                            <form role="form" novalidate name="editForm">
                                <div class="box-body">
                                    <div class="form-group">
                                        <label><%= __('Course Name') %></label>
                                        <input type="text" value="{{ course.courseName }}" ng-model="course.courseName" name="classname" class="form-control" required>
                                        <span style="color:red" ng-show="editForm.classname.$dirty && editForm.classname.$invalid">
                                            <span ng-show="editForm.classname.$error.required">Course Name is required.</span>
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <label><%= __('Course Category') %></label>
                                        <!-- <input type="text" value="{{ course.courseCategory }}" ng-model="course.courseCategory" name="classcategory" class="form-control" required>
                                        <span style="color:red" ng-show="editForm.classcategory.$dirty && editForm.classcategory.$invalid">
                                            <span ng-show="editForm.classcategory.$error.required">Class Category is required.</span>
                                        </span> -->

                                        <select class="form-control" ng-model="course.courseCategory">
                                            <% common.Courses.forEach(function(item){ %>
                                                <option value="<%= item %>">
                                                    <%= item %>
                                                </option>
                                            <%  }) %>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label><%= __('Description') %></label>
                                        <input type="text" value="{{ course.description }}" ng-model="course.description" name="description" class="form-control" required>
                                        <span style="color:red" ng-show="editForm.description.$dirty && editForm.description.$invalid">
                                            <span ng-show="editForm.description.$error.required">Description is required.</span>
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <label><%= __('Package Name') %></label>
                                        <input type="text" value="{{ course.packageName }}" ng-model="course.packageName" name="packageName" class="form-control" required>
                                        <span style="color:red" ng-show="editForm.packageName.$dirty && editForm.packageName.$invalid">
                                            <span ng-show="editForm.packageName.$error.required">Package Name is required.</span>
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <label><%= __('Course ID') %></label>
                                        <input type="text" value="{{ course.courseID }}" ng-model="course.courseID" name="classID" class="form-control" required>
                                        <span style="color:red" ng-show="editForm.classID.$dirty && editForm.classID.$invalid">
                                            <span ng-show="editForm.classID.$error.required">Class ID is required.</span>
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <label><%= __('School Name') %></label>
                                        <!-- <input type="text" value="{{ course.schoolName }}" ng-model="course.schoolName" name="schoolName" class="form-control" required>
                                        <span style="color:red" ng-show="editForm.schoolName.$dirty && editForm.schoolName.$invalid">
                                            <span ng-show="editForm.schoolName.$error.required">School Name is required.</span>
                                        </span> -->
                                        <select class="form-control" ng-model="course.schoolName">
                                            <% common.SchoolNames.forEach(function(item){ %>
                                                <option value="<%= item %>">
                                                    <%= item %>
                                                </option>
                                            <%  }) %>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="class_school_name"><%= __('Number of Classes') %></label>
                                        <input ng-model="course.numberof" required type="text" class="form-control" name="class_numberof" placeholder="Enter Number of Classes">
                                        <span style="color:red" ng-show="editForm.class_numberof.$dirty && editForm.class_numberof.$invalid">
                                            <span ng-show="editForm.class_numberof.$error.required">Number is required.</span>
                                        </span>
                                    </div>
                                    <!-- <div class="form-group">
                                        <label>Start time</label>
                                        <input type="text" value="{{ class.starttime }}" ng-model="class.starttime" name="starttime" class="form-control" required>
                                        <span style="color:red" ng-show="editForm.starttime.$dirty && editForm.starttime.$invalid">
                                            <span ng-show="editForm.starttime.$error.required">Start time is required.</span>
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <label>End time</label>
                                        <input type="text" value="{{ class.endtime }}" ng-model="class.endtime" name="endtime" class="form-control" required>
                                        <span style="color:red" ng-show="editForm.endtime.$dirty && editForm.endtime.$invalid">
                                            <span ng-show="editForm.endtime.$error.required">End time is required.</span>
                                        </span>
                                    </div> -->
                                    <!-- <div class="form-group">
                                        <table class="table">
                                        <tr>
                                            <td style="border-top: none">
                                                <div class="form-group">
                                                    <label for="class_start_time">Class - Start Date </label>
                                                    
                                                    <input ui-date name="class_start_time" required class="form-control" ng-model="class.starttime" ui-date-format="dd-MM-yy">
                                                    
                                                    <span style="color:red" ng-show="editForm.class_start_time.$dirty && editForm.class_start_time.$invalid">
                                                        <span ng-show="editForm.class_start_time.$error.required">Start Date is required.</span>
                                                    </span>
                                                </div>            
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border-top: none">
                                                <div class="form-group">
                                                    <label for="class_end_time">Class - End Date</label>

                                                    <input ui-date name="class_end_time" required class="form-control" ng-model="class.endtime" ui-date-format="dd-MM-yy">

                                                    <span style="color:red" ng-show="editForm.class_end_time.$dirty && editForm.class_end_time.$invalid">
                                                        <span ng-show="editForm.class_end_time.$error.required">End Date is required.</span>
                                                    </span>
                                                </div>            
                                            </td>
                                        </tr>
                                    </table>
                                    </div> -->

                                    <!-- <div class="form-group">
                                        <label>Start Time</label>
                                        <input type="text" value="{{ class.startingTime }}" ng-model="class.startingTime" name="startingTime" class="form-control" required placeholder="Starting Time">
                                        <span style="color:red" ng-show="editForm.startingTime.$dirty && editForm.startingTime.$invalid">
                                            <span ng-show="editForm.startingTime.$error.required">Starting Time is required.</span>
                                        </span>
                                    </div>

                                    <div class="form-group">
                                        <label>End Time</label>
                                        <input type="text" value="{{ class.endingTime }}" ng-model="class.endingTime" name="endingTime" class="form-control" required placeholder="Ending Time">
                                        <span style="color:red" ng-show="editForm.endingTime.$dirty && editForm.endingTime.$invalid">
                                            <span ng-show="editForm.endingTime.$error.required">Ending Time is required.</span>
                                        </span>
                                    </div> -->

                                    
                                </div><!-- /.box-body -->

                                <div class="box-footer">
                                    <div class="callout callout-danger server_msg" ng-if="serverRes" style="position: absolute; z-index: 10">

                                        <p>{{ serverMsg }}</p>
                                    </div>
                                    <button class="btn btn-primary" ng-disabled="editForm.$invalid" ng-click="editCoursefunc(editForm.$valid)">Submit</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>

            </section><!-- /.content -->
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->

    <script src="/angular/angular.min.js"></script>
    <script src="/bower_components/angular-utils-pagination/dirPagination.js"></script>
    <script type="text/javascript" src="/bower_components/jquery-ui/jquery-ui.js"></script>
    <script type="text/javascript" src="/bower_components/angular-ui-date/src/date.js"></script>
    <script src="/angular_app/editcourses/app.js"></script>

</body>
</html>
